{
  "name": "ShellAgent",
  "private": true,
  "author": "kun",
  "scripts": {
    "flask-dev": "FLASK_DEBUG=1 pip3 install -r python/requirements.txt && python3 -m flask --app python/index run -p 5328",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint-staged": "lint-staged",
    "kill-flask": "lsof -i:5328 | awk 'NR>1 {print $2}' | xargs kill -9"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "turbo": "^2.0.14"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "**/*.js?(x)": [
      "pnpm run format"
    ],
    "**/*.ts?(x)": [
      "pnpm run format"
    ]
  }
}
