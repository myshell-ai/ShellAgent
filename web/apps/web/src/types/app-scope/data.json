{
  "scopes": {
    "context": {
      "scopeType": "global",
      "variables": {
        "globalVariable1": {
          "scope": [],
          "type": "text",
          "value": "value1"
        },
        "globalVariable2": {
          "scope": [],
          "type": "image",
          "value": "https://example.com/image.jpg"
        }
      }
    },
    "states": {
      "state1": {
        "scopeType": "chain",
        "variables": {},
        "children": {
          "inputs": {
            "scopeType": "local",
            "variables": {
              "inputField1": {
                "type": "text",
                "scope": [
                  "context",
                  "state1"
                ],
                "value": "inputValue1"
              },
              "inputField2": {
                "type": "image",
                "scope": [
                  "context",
                  "state1"
                ],
                "value": "https://example.com/image.jpg"
              }
            }
          },
          "tasks": {
            "scopeType": "local",
            "scope": [
              "state1"
            ],
            "variables": {
              "taskVariable1": {
                "type": "workflow",
                "scope": [
                  "context",
                  "state1",
                  "state1.inputs"
                ],
                "value": {
                  "output1": {
                    "type": "text",
                    "value": "outputValue1"
                  },
                  "output2": {
                    "type": "image",
                    "value": "outputValue2"
                  }
                }
              },
              "taskVariable2": {
                "type": "widget",
                "scope": [
                  "context",
                  "state1",
                  "state1.inputs",
                  "state1.tasks.taskVariable1"
                ],
                "value": {
                  "images": {
                    "type": "image",
                    "value": "outputValue2"
                  }
                }
              }
            }
          },
          "outputs": {
            "scopeType": "local",
            "scope": [
              "context",
              "state1",
              "state1.inputs",
              "state1.tasks.taskVariable1",
              "state1.tasks.taskVariable2"
            ],
            "variables": {
              "finalOutput1": "finalValue1",
              "finalOutput2": 200
            },
            "render": {
              "scopeType": "local",
              "scope": [
                "context",
                "state1",
                "state1.inputs",
                "state1.tasks.taskVariable1",
                "state1.tasks.taskVariable2",
                "state1.outputs.finalOutput1",
                "state1.outputs.finalOutput2"
              ],
              "buttons": {
                "button1": {
                  "event": "xxxxxx",
                  "payload": {
                    "key": "value"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
